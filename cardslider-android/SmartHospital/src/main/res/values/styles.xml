    <style name="FullscreenDialog" parent="android:Theme.Dialog">
        <item name="android:colorAccent" tools:ignore="NewApi">@color/app_color</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/app_color</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/grey_divider</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/app_color</item>
        <item name="android:colorControlHighlight" tools:ignore="NewApi">@color/app_color</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">#009df7</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorForeground">@color/md_grey_600</item>
        <item name="android:windowAnimationStyle">@style/FullscreenDialogAnimation</item>
    </style>
    <style name="FullscreenDialogAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
    <style name="TemperatureTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/temperature_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlaceTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ClockTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/white</item>
        </style>

    <style name="text_expand">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Loading Progress Bar -->
    <style name="loading_progress_bar_style" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/d_white_blue_progress_bar</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>


    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent_color</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/statusBarColor</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigationBarColor</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>


    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/drawerArrowColor</item>
    </style>

    <declare-styleable name="StickyScrollView">
        <attr name="shadowHeight" format="dimension" />
        <attr name="shadowDrawable" format="reference" />
    </declare-styleable>

    <color name="grey_divider">#CFCFCF</color>
    <color name="md_grey_600">#757575</color>
</resources>
